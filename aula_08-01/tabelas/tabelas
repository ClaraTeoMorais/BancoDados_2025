CREATE TABLE Turma(
	id int identity not null,
	nome varchar(30) not null,
	primary key (id)
)

CREATE TABLE Aluno(
	id int identity not null,
	nome varchar(90) not null,
	telefones varchar(20),
	idade int,
	data_nascimento date,
	turma_id int not null,
	primary key (id),
	FOREIGN KEY (turma_id) REFERENCES Turma(id) 
)

